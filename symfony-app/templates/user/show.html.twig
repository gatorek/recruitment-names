{% extends 'base.html.twig' %}

{% block title %}User {{ user.firstName }} {{ user.lastName }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card">
                    <div class="card-header bg-light text-center py-4">
                        <h1 class="card-title h2 mb-2">{{ user.firstName }} {{ user.lastName }}</h1>
                        <small class="text-muted">ID: {{ user.id }}</small>
                    </div>
                    
                    <div class="card-body p-4">
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded user-detail-row">
                                    <span class="fw-semibold text-muted">First Name:</span>
                                    <span class="text-dark">{{ user.firstName }}</span>
                                </div>
                            </div>
                            
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded user-detail-row">
                                    <span class="fw-semibold text-muted">Last Name:</span>
                                    <span class="text-dark">{{ user.lastName }}</span>
                                </div>
                            </div>
                            
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded user-detail-row">
                                    <span class="fw-semibold text-muted">Gender:</span>
                                    <span class="gender-badge gender-{{ user.gender }}">
                                        {% if user.gender == 'male' %}
                                            Male
                                        {% elseif user.gender == 'female' %}
                                            Female
                                        {% else %}
                                            {{ user.gender }}
                                        {% endif %}
                                    </span>
                                </div>
                            </div>
                            
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center p-3 bg-light rounded user-detail-row">
                                    <span class="fw-semibold text-muted">Birth Date:</span>
                                    <span class="text-dark">{{ user.birthdate|date('d.m.Y') }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-footer text-center">
                        <a href="{{ path('home') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
