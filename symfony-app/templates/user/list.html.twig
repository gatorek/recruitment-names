{% extends 'base.html.twig' %}

{% block title %}Users List{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-light text-center py-4">
                        <h1 class="card-title h2 mb-2">Users List</h1>
                        <p class="text-muted mb-0">Browse all users</p>
                    </div>
                    
                    <div class="card-body p-4">
                        <!-- Error Messages -->
                        {% if error is defined and error %}
                            <div class="alert alert-danger" role="alert">
                                <i class="bi bi-exclamation-triangle"></i> {{ error }}
                            </div>
                        {% endif %}

                        <!-- Flash Messages -->
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger" role="alert">
                                <i class="bi bi-exclamation-triangle"></i> {{ message }}
                            </div>
                        {% endfor %}

                        <!-- Users Table -->
                        {% if users is defined and users|length > 0 %}
                            <div class="row">
                                <div class="col-12">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h5 class="mb-0">
                                            <i class="bi bi-people"></i> 
                                            Found {{ users|length }} user{{ users|length == 1 ? '' : 's' }}
                                        </h5>
                                    </div>
                                    
                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover">
                                            <thead class="table-dark">
                                                <tr>
                                                    <th scope="col">
                                                        <a href="{{ path('user_list', {'sort_field': 'first_name', 'sort_order': currentSortField == 'first_name' and currentSort == null ? 'asc' : (currentSortField == 'first_name' and currentSort == 'asc' ? 'desc' : (currentSortField == 'first_name' and currentSort == 'desc' ? '' : 'asc'))}) }}" 
                                                           class="text-white text-decoration-none d-flex align-items-center">
                                                            {% if currentSortField == 'first_name' and currentSort == 'asc' %}
                                                                <i class="bi bi-triangle-fill me-2"></i>
                                                            {% elseif currentSortField == 'first_name' and currentSort == 'desc' %}
                                                                <i class="bi bi-triangle-fill me-2" style="transform: rotate(180deg);"></i>
                                                            {% endif %}
                                                            <span>First Name</span>
                                                        </a>
                                                    </th>
                                                    <th scope="col">
                                                        <a href="{{ path('user_list', {'sort_field': 'last_name', 'sort_order': currentSortField == 'last_name' and currentSort == null ? 'asc' : (currentSortField == 'last_name' and currentSort == 'asc' ? 'desc' : (currentSortField == 'last_name' and currentSort == 'desc' ? '' : 'asc'))}) }}" 
                                                           class="text-white text-decoration-none d-flex align-items-center">
                                                            {% if currentSortField == 'last_name' and currentSort == 'asc' %}
                                                                <i class="bi bi-triangle-fill me-2"></i>
                                                            {% elseif currentSortField == 'last_name' and currentSort == 'desc' %}
                                                                <i class="bi bi-triangle-fill me-2" style="transform: rotate(180deg);"></i>
                                                            {% endif %}
                                                            <span>Last Name</span>
                                                        </a>
                                                    </th>
                                                    <th scope="col">
                                                        <a href="{{ path('user_list', {'sort_field': 'gender', 'sort_order': currentSortField == 'gender' and currentSort == null ? 'asc' : (currentSortField == 'gender' and currentSort == 'asc' ? 'desc' : (currentSortField == 'gender' and currentSort == 'desc' ? '' : 'asc'))}) }}" 
                                                           class="text-white text-decoration-none d-flex align-items-center">
                                                            {% if currentSortField == 'gender' and currentSort == 'asc' %}
                                                                <i class="bi bi-triangle-fill me-2"></i>
                                                            {% elseif currentSortField == 'gender' and currentSort == 'desc' %}
                                                                <i class="bi bi-triangle-fill me-2" style="transform: rotate(180deg);"></i>
                                                            {% endif %}
                                                            <span>Gender</span>
                                                        </a>
                                                    </th>
                                                    <th scope="col">
                                                        <a href="{{ path('user_list', {'sort_field': 'birthdate', 'sort_order': currentSortField == 'birthdate' and currentSort == null ? 'asc' : (currentSortField == 'birthdate' and currentSort == 'asc' ? 'desc' : (currentSortField == 'birthdate' and currentSort == 'desc' ? '' : 'asc'))}) }}" 
                                                           class="text-white text-decoration-none d-flex align-items-center">
                                                            {% if currentSortField == 'birthdate' and currentSort == 'asc' %}
                                                                <i class="bi bi-triangle-fill me-2"></i>
                                                            {% elseif currentSortField == 'birthdate' and currentSort == 'desc' %}
                                                                <i class="bi bi-triangle-fill me-2" style="transform: rotate(180deg);"></i>
                                                            {% endif %}
                                                            <span>Birthdate</span>
                                                        </a>
                                                    </th>
                                                    <th scope="col" class="text-center">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for user in users %}
                                                    <tr>
                                                        <td>{{ user.firstName }}</td>
                                                        <td>{{ user.lastName }}</td>
                                                        <td>
                                                            <span class="gender-badge gender-{{ user.gender }}">
                                                                {% if user.gender == 'male' %}
                                                                    Male
                                                                {% elseif user.gender == 'female' %}
                                                                    Female
                                                                {% else %}
                                                                    {{ user.gender }}
                                                                {% endif %}
                                                            </span>
                                                        </td>
                                                        <td>{{ user.birthdate|date('d.m.Y') }}</td>
                                                        <td class="text-center">
                                                            <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-outline-primary btn-sm me-2">
                                                                <i class="bi bi-eye"></i> View Details
                                                            </a>
                                                            <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-outline-warning btn-sm">
                                                                <i class="bi bi-pencil"></i> Edit
                                                            </a>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="text-center py-5">
                                <i class="bi bi-person-x display-1 text-muted"></i>
                                <h4 class="mt-3 text-muted">No users found</h4>
                                <p class="text-muted">No users are available at the moment.</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}