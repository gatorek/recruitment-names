{% extends 'base.html.twig' %}

{% block title %}Users List{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-light text-center py-4">
                        <h1 class="card-title h2 mb-2">Users List</h1>
                        <p class="text-muted mb-0">Browse all users</p>
                    </div>
                    
                    <div class="card-body p-4">
                        <!-- Error Messages -->
                        {% if error is defined and error %}
                            <div class="alert alert-danger" role="alert">
                                <i class="bi bi-exclamation-triangle"></i> {{ error }}
                            </div>
                        {% endif %}

                        <!-- Flash Messages -->
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success" role="alert">
                                <i class="bi bi-check-circle"></i> {{ message }}
                            </div>
                        {% endfor %}
                        
                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger" role="alert">
                                <i class="bi bi-exclamation-triangle"></i> {{ message }}
                            </div>
                        {% endfor %}

                        <!-- Filter Form -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <div class="card border-light">
                                    <div class="card-body">
                                        <h6 class="card-title mb-3">
                                            <i class="bi bi-funnel"></i> Filter Users
                                        </h6>
                                        <form method="GET" action="{{ path('user_list') }}" class="row g-3">
                                            <div class="col-md-2">
                                                <label for="first_name" class="form-label">First Name</label>
                                                <input type="text" 
                                                       class="form-control" 
                                                       id="first_name" 
                                                       name="first_name" 
                                                       value="{{ currentFirstNameFilter ?? '' }}" 
                                                       placeholder="Enter first name to filter...">
                                            </div>
                                            <div class="col-md-2">
                                                <label for="last_name" class="form-label">Last Name</label>
                                                <input type="text" 
                                                       class="form-control" 
                                                       id="last_name" 
                                                       name="last_name" 
                                                       value="{{ currentLastNameFilter ?? '' }}" 
                                                       placeholder="Enter last name to filter...">
                                            </div>
                                            <div class="col-md-2">
                                                <label for="gender" class="form-label">Gender</label>
                                                <select class="form-select" id="gender" name="gender">
                                                    <option value="">All</option>
                                                    <option value="male" {{ currentGenderFilter == 'male' ? 'selected' : '' }}>Male</option>
                                                    <option value="female" {{ currentGenderFilter == 'female' ? 'selected' : '' }}>Female</option>
                                                </select>
                                            </div>
                                            <div class="col-md-2">
                                                <label for="birthdate_from" class="form-label">Birthdate From</label>
                                                <input type="date" 
                                                       class="form-control" 
                                                       id="birthdate_from" 
                                                       name="birthdate_from" 
                                                       value="{{ currentBirthdateFromFilter ?? '' }}">
                                            </div>
                                            <div class="col-md-2">
                                                <label for="birthdate_to" class="form-label">Birthdate To</label>
                                                <input type="date" 
                                                       class="form-control" 
                                                       id="birthdate_to" 
                                                       name="birthdate_to" 
                                                       value="{{ currentBirthdateToFilter ?? '' }}">
                                            </div>
                                            <div class="col-md-2 d-flex align-items-end">
                                                <button type="submit" class="btn btn-primary me-2">
                                                    <i class="bi bi-search"></i> Filter
                                                </button>
                                                {% if currentFirstNameFilter or currentLastNameFilter or currentGenderFilter or currentBirthdateFromFilter or currentBirthdateToFilter %}
                                                    <a href="{{ path('user_list', currentSortField or currentSort ? {'sort_field': currentSortField, 'sort_order': currentSort} : {}) }}" class="btn btn-outline-secondary">
                                                        <i class="bi bi-x-circle"></i> Clear Filter
                                                    </a>
                                                {% endif %}
                                            </div>
                                            <!-- Preserve current sorting parameters -->
                                            {% if currentSortField %}
                                                <input type="hidden" name="sort_field" value="{{ currentSortField }}">
                                            {% endif %}
                                            {% if currentSort %}
                                                <input type="hidden" name="sort_order" value="{{ currentSort }}">
                                            {% endif %}
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Users Table -->
                        {% if users is defined and users|length > 0 %}
                            <div class="row">
                                <div class="col-12">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <h5 class="mb-0">
                                            <i class="bi bi-people"></i> 
                                            Found {{ users|length }} user{{ users|length == 1 ? '' : 's' }}
                                        </h5>
                                        <a href="{{ path('user_create') }}" class="btn btn-success">
                                            <i class="bi bi-plus-circle"></i> Create New User
                                        </a>
                                    </div>
                                    
                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover">
                                            <thead class="table-dark">
                                                <tr>
                                                    <th scope="col">
                                                        <a href="{{ path('user_list', {'sort_field': 'first_name', 'sort_order': currentSortField == 'first_name' and currentSort == null ? 'asc' : (currentSortField == 'first_name' and currentSort == 'asc' ? 'desc' : (currentSortField == 'first_name' and currentSort == 'desc' ? '' : 'asc'))} | merge(currentFirstNameFilter ? {'first_name': currentFirstNameFilter} : {}) | merge(currentLastNameFilter ? {'last_name': currentLastNameFilter} : {}) | merge(currentGenderFilter ? {'gender': currentGenderFilter} : {}) | merge(currentBirthdateFromFilter ? {'birthdate_from': currentBirthdateFromFilter} : {}) | merge(currentBirthdateToFilter ? {'birthdate_to': currentBirthdateToFilter} : {})) }}" 
                                                           class="text-white text-decoration-none d-flex align-items-center">
                                                            {% if currentSortField == 'first_name' and currentSort == 'asc' %}
                                                                <i class="bi bi-triangle-fill me-2"></i>
                                                            {% elseif currentSortField == 'first_name' and currentSort == 'desc' %}
                                                                <i class="bi bi-triangle-fill me-2" style="transform: rotate(180deg);"></i>
                                                            {% endif %}
                                                            <span>First Name</span>
                                                        </a>
                                                    </th>
                                                    <th scope="col">
                                                        <a href="{{ path('user_list', {'sort_field': 'last_name', 'sort_order': currentSortField == 'last_name' and currentSort == null ? 'asc' : (currentSortField == 'last_name' and currentSort == 'asc' ? 'desc' : (currentSortField == 'last_name' and currentSort == 'desc' ? '' : 'asc'))} | merge(currentFirstNameFilter ? {'first_name': currentFirstNameFilter} : {}) | merge(currentLastNameFilter ? {'last_name': currentLastNameFilter} : {}) | merge(currentGenderFilter ? {'gender': currentGenderFilter} : {}) | merge(currentBirthdateFromFilter ? {'birthdate_from': currentBirthdateFromFilter} : {}) | merge(currentBirthdateToFilter ? {'birthdate_to': currentBirthdateToFilter} : {})) }}" 
                                                           class="text-white text-decoration-none d-flex align-items-center">
                                                            {% if currentSortField == 'last_name' and currentSort == 'asc' %}
                                                                <i class="bi bi-triangle-fill me-2"></i>
                                                            {% elseif currentSortField == 'last_name' and currentSort == 'desc' %}
                                                                <i class="bi bi-triangle-fill me-2" style="transform: rotate(180deg);"></i>
                                                            {% endif %}
                                                            <span>Last Name</span>
                                                        </a>
                                                    </th>
                                                    <th scope="col">
                                                        <a href="{{ path('user_list', {'sort_field': 'gender', 'sort_order': currentSortField == 'gender' and currentSort == null ? 'asc' : (currentSortField == 'gender' and currentSort == 'asc' ? 'desc' : (currentSortField == 'gender' and currentSort == 'desc' ? '' : 'asc'))} | merge(currentFirstNameFilter ? {'first_name': currentFirstNameFilter} : {}) | merge(currentLastNameFilter ? {'last_name': currentLastNameFilter} : {}) | merge(currentGenderFilter ? {'gender': currentGenderFilter} : {}) | merge(currentBirthdateFromFilter ? {'birthdate_from': currentBirthdateFromFilter} : {}) | merge(currentBirthdateToFilter ? {'birthdate_to': currentBirthdateToFilter} : {})) }}" 
                                                           class="text-white text-decoration-none d-flex align-items-center">
                                                            {% if currentSortField == 'gender' and currentSort == 'asc' %}
                                                                <i class="bi bi-triangle-fill me-2"></i>
                                                            {% elseif currentSortField == 'gender' and currentSort == 'desc' %}
                                                                <i class="bi bi-triangle-fill me-2" style="transform: rotate(180deg);"></i>
                                                            {% endif %}
                                                            <span>Gender</span>
                                                        </a>
                                                    </th>
                                                    <th scope="col">
                                                        <a href="{{ path('user_list', {'sort_field': 'birthdate', 'sort_order': currentSortField == 'birthdate' and currentSort == null ? 'asc' : (currentSortField == 'birthdate' and currentSort == 'asc' ? 'desc' : (currentSortField == 'birthdate' and currentSort == 'desc' ? '' : 'asc'))} | merge(currentFirstNameFilter ? {'first_name': currentFirstNameFilter} : {}) | merge(currentLastNameFilter ? {'last_name': currentLastNameFilter} : {}) | merge(currentGenderFilter ? {'gender': currentGenderFilter} : {}) | merge(currentBirthdateFromFilter ? {'birthdate_from': currentBirthdateFromFilter} : {}) | merge(currentBirthdateToFilter ? {'birthdate_to': currentBirthdateToFilter} : {})) }}" 
                                                           class="text-white text-decoration-none d-flex align-items-center">
                                                            {% if currentSortField == 'birthdate' and currentSort == 'asc' %}
                                                                <i class="bi bi-triangle-fill me-2"></i>
                                                            {% elseif currentSortField == 'birthdate' and currentSort == 'desc' %}
                                                                <i class="bi bi-triangle-fill me-2" style="transform: rotate(180deg);"></i>
                                                            {% endif %}
                                                            <span>Birthdate</span>
                                                        </a>
                                                    </th>
                                                    <th scope="col" class="text-center">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for user in users %}
                                                    <tr>
                                                        <td>{{ user.firstName }}</td>
                                                        <td>{{ user.lastName }}</td>
                                                        <td>
                                                            <span class="gender-badge gender-{{ user.gender }}">
                                                                {% if user.gender == 'male' %}
                                                                    Male
                                                                {% elseif user.gender == 'female' %}
                                                                    Female
                                                                {% else %}
                                                                    {{ user.gender }}
                                                                {% endif %}
                                                            </span>
                                                        </td>
                                                        <td>{{ user.birthdate|date('d.m.Y') }}</td>
                                                        <td class="text-center">
                                                            <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-outline-primary btn-sm me-2">
                                                                <i class="bi bi-eye"></i> View Details
                                                            </a>
                                                            <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-outline-warning btn-sm me-2">
                                                                <i class="bi bi-pencil"></i> Edit
                                                            </a>
                                                            <button type="button" class="btn btn-outline-danger btn-sm" onclick="confirmDelete({{ user.id }}, '{{ user.firstName }} {{ user.lastName }}')">
                                                                <i class="bi bi-trash"></i> Delete
                                                            </button>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        {% else %}
                            <div class="text-center py-5">
                                <i class="bi bi-person-x display-1 text-muted"></i>
                                <h4 class="mt-3 text-muted">No users found</h4>
                                <p class="text-muted">No users are available at the moment.</p>
                                <a href="{{ path('user_create') }}" class="btn btn-success btn-lg mt-3">
                                    <i class="bi bi-plus-circle"></i> Create First User
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hidden delete form -->
    <form id="deleteForm" method="POST" style="display: none;">
        <input type="hidden" name="_method" value="DELETE">
    </form>

    <script>
        function confirmDelete(userId, userName) {
            if (confirm(`Are you sure you want to delete user "${userName}"?\n\nThis action cannot be undone.`)) {
                const form = document.getElementById('deleteForm');
                form.action = `/users/${userId}`;
                form.submit();
            }
        }
    </script>
{% endblock %}