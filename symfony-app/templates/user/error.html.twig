{% extends 'base.html.twig' %}

{% block title %}Error{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card text-center">
                    <div class="card-body p-5">
                        <div class="error-icon mb-4">⚠️</div>
                        <h1 class="card-title h3 text-danger mb-3">An Error Occurred</h1>
                        <div class="alert alert-danger border-start border-danger border-4 mb-4">
                            {{ error }}
                        </div>
                        <a href="{{ path('user_list') }}" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Users List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
