{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h1 class="card-title mb-0">{{ title }}</h1>
                </div>
                <div class="card-body">
                    <p class="lead">{{ message }}</p>
                    
                    <div class="alert alert-info">
                        <h5>Page information:</h5>
                        <ul class="mb-0">
                            <li><strong>Date:</strong> {{ current_date|date('d.m.Y H:i:s') }}</li>
                            <li><strong>Framework:</strong> Symfony</li>
                            <li><strong>Template Engine:</strong> Twig</li>
                        </ul>
                    </div>
                    
                </div>
                <div class="card-footer text-muted">
                    <small>Page generated by Symfony + Twig</small>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
